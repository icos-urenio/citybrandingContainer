<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="3.0" method="upgrade" client="site">
    <name>Improve My City Filters</name>
    <creationDate>2015-01-25</creationDate>
    <copyright>Copyright (C) 2015. All rights reserved.</copyright>
    <license>GNU AFFERO GENERAL PUBLIC LICENSE Version 3; see LICENSE</license>
    <author>Ioannis Tsampoulatidis</author>
    <authorEmail>tsampoulatidis@gmail.com</authorEmail>
    <authorUrl>https://github.com/itsam</authorUrl>
    <version>3.0.0</version>
    <description>MOD_CITYBRANDINGFILTERS_DESCRIPTION</description>
    
    <files>
        <filename module="mod_citybrandingfilters">mod_citybrandingfilters.php</filename>
        <filename>helper.php</filename>
        <filename>index.html</filename>
        <folder>tmpl</folder>
        <folder>assets</folder>
    </files>
    <languages folder="language">
			<language tag="en-GB">en-GB/en-GB.mod_citybrandingfilters.ini</language>
			<language tag="en-GB">en-GB/en-GB.mod_citybrandingfilters.sys.ini</language>
			<language tag="el-GR">el-GR/el-GR.mod_citybrandingfilters.ini</language>
			<language tag="el-GR">el-GR/el-GR.mod_citybrandingfilters.sys.ini</language>
    </languages>
    <config>
        <fields name="params">
            <fieldset
                name="advanced">
                <field name="show_on_details"
                    type="radio"
                    default="0"
                    class="btn-group btn-group-yesno"
                    label="MOD_CITYBRANDINGFILTERS_SHOW_ON_DETAILS">
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>
                <field name="show_help"
                    type="radio"
                    default="0"
                    class="btn-group btn-group-yesno"
                    label="MOD_CITYBRANDINGFILTERS_SHOW_HELP">
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>                
                <field name="help_link"
                    type="text"
                    label="MOD_CITYBRANDINGFILTERS_LINK_TO_HELP" />
                
                <field
                    name="layout"
                    type="modulelayout"
                    default="default"
                    label="JFIELD_ALT_LAYOUT_LABEL"
                    description="JFIELD_ALT_MODULE_LAYOUT_DESC" />

                <field
                    name="moduleclass_sfx"
                    type="textarea" rows="3"
                    label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
                    description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />

                <field
                    name="cache"
                    type="list"
                    default="1"
                    label="COM_MODULES_FIELD_CACHING_LABEL"
                    description="COM_MODULES_FIELD_CACHING_DESC">
                    <option
                        value="1">JGLOBAL_USE_GLOBAL</option>
                    <option
                        value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
                </field>

                <field
                    name="cache_time"
                    type="text"
                    default="900"
                    label="COM_MODULES_FIELD_CACHE_TIME_LABEL"
                    description="COM_MODULES_FIELD_CACHE_TIME_DESC" />
                <field
                    name="cachemode"
                    type="hidden"
                    default="static">
                    <option
                        value="static"></option>
                </field>

            </fieldset>     
        </fields>
    </config>
</extension>
